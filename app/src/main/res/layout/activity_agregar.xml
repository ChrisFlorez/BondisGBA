<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chriscompany.bondisgba.Agregar_Activity">
    <EditText
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre del colectivo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el tipo de servicio"
        android:layout_below="@+id/nombre"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/ramal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el ramal del colectivo"
        android:layout_below="@+id/tipo"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/frecuencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la frecuencia del colectivo"
        android:layout_below="@+id/ramal"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el horario"
        android:layout_below="@+id/frecuencia"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/bt_ok"
        android:text="@string/bt_TxtOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horario"
        android:layout_alignParentStart="true" />

</RelativeLayout>
